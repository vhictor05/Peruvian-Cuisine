@startuml
actor Cliente
participant "GUI Disco" as GUI
participant "ControladorBar" as Controlador
participant "Trago" as Trago
participant "PedidoBar" as Pedido
participant "BoletaService" as Boleta

Cliente -> GUI : seleccionarTrago()
GUI -> Trago : obtenerDatosTrago()
Trago --> GUI : infoTrago
GUI -> Cliente : mostrarInfo()

Cliente -> GUI : confirmarCompra()
GUI -> Controlador : procesarCompra(trago)
Controlador -> Pedido : registrarPedido(cliente, trago)
Pedido --> Controlador : pedidoCreado
Controlador -> Boleta : generarBoleta(pedido)
Boleta --> Controlador : boleta
Controlador -> GUI : mostrarBoleta()
GUI -> Cliente : mostrarConfirmaciÃ³n()
@enduml
